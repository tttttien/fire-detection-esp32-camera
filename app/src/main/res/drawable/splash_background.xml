<?xml version="1.0" encoding="utf-8"?>
<!-- Layer-list drawable for a gradient background with a fire-like color transition -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#FF4500"
                android:centerColor="#FF6F00"
                android:endColor="#FFD700"
                android:type="linear"/>
        </shape>
    </item>
</layer-list>
